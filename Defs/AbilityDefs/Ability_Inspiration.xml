<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Inspiration: Global buff for all player pawns on map -->
  <AbilityDef ParentName="PsycastBase">
    <defName>ProjectOvermind_Inspiration</defName>
    <label>inspiration</label>
    <description>Channel psychic energy to inspire all colonists on the map, dramatically boosting their productivity and learning capabilities. All player-owned pawns gain massively increased work speed, learning speed, crafting quality, and movement speed for 60 seconds.\n\nThe buff's strength scales with each pawn's Psychic Sensitivity (higher sensitivity = stronger effect).\n\nThis psycast does not affect faction relations and continues even if the caster dies during the duration.</description>
    <iconPath>UI/Icons/Psycasts/Inspiration</iconPath>
    <category>ProjectOvermind_MindshiftAbilities</category>
    <level>4</level>
    <statBases>
      <Ability_Duration>1</Ability_Duration>
      <Ability_PsyfocusCost>0.40</Ability_PsyfocusCost>
      <Ability_EntropyGain>0.20</Ability_EntropyGain>
    </statBases>
  <verbProperties>
    <verbClass>ProjectOvermind.Verb_Inspiration</verbClass>
    <warmupTime>4.0</warmupTime>
    <range>-1</range>
    <targetParams>
      <canTargetSelf>true</canTargetSelf>
      <canTargetPawns>false</canTargetPawns>
      <canTargetBuildings>false</canTargetBuildings>
      <canTargetLocations>false</canTargetLocations>
    </targetParams>
  </verbProperties>
  <cooldownTicksRange>12000</cooldownTicksRange> <!-- 200 seconds / ~3.3 minutes -->
  <comps>
    <li Class="CompProperties_AbilityFleckOnTarget">
      <fleckDef>PsycastAreaEffect</fleckDef>
    </li>
  </comps>
  <sendLetterOnCooldownComplete>false</sendLetterOnCooldownComplete>
  <showGizmoOnWorldView>false</showGizmoOnWorldView>
  <disableGizmoWhileUndrafted>false</disableGizmoWhileUndrafted>
  <showPsycastEffects>true</showPsycastEffects>
  <displayGizmoWhileUndrafted>true</displayGizmoWhileUndrafted>
  <jobDef>CastAbilityOnWorldTile</jobDef>
</AbilityDef></Defs>
