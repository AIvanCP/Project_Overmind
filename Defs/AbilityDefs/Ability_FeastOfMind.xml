<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!-- Feast of Mind Psycast -->
	<AbilityDef ParentName="PsycastBase">
		<defName>ProjectOvermind_FeastOfMind</defName>
		<label>feast of mind</label>
		<description>Channel psychic energy to reduce a target's hunger rate and increase their eating speed. The target's hunger will deplete 50% slower (scaled by psychic sensitivity), and they will eat 50% faster. Perfect for sustaining pawns during long crafting sessions or operations.\n\nDuration: 90 seconds\nTarget: Self or friendly pawn\nScales with target's psychic sensitivity</description>
		<iconPath>UI/Icons/Psycasts/FeastOfMind</iconPath>
		<category>ProjectOvermind_MindshiftAbilities</category>
		<level>3</level>
		<statBases>
			<Ability_Duration>1</Ability_Duration>
			<Ability_PsyfocusCost>0.15</Ability_PsyfocusCost>
			<Ability_EntropyGain>0.25</Ability_EntropyGain>
		</statBases>
	<verbProperties>
		<verbClass>ProjectOvermind.Verb_FeastOfMind</verbClass>
		<warmupTime>1.0</warmupTime>
		<range>5</range>
		<targetParams>
			<canTargetSelf>true</canTargetSelf>
			<canTargetPawns>true</canTargetPawns>
			<canTargetBuildings>false</canTargetBuildings>
			<canTargetAnimals>false</canTargetAnimals>
			<mustBeSelectable>true</mustBeSelectable>
		</targetParams>
	</verbProperties>
	<cooldownTicksRange>3600</cooldownTicksRange> <!-- 60 seconds -->
	<comps>
		<li Class="CompProperties_AbilityFleckOnTarget">
			<fleckDef>PsycastAreaEffect</fleckDef>
		</li>
	</comps>
	<sendLetterOnCooldownComplete>false</sendLetterOnCooldownComplete>
	<showGizmoOnWorldView>false</showGizmoOnWorldView>
	<disableGizmoWhileUndrafted>false</disableGizmoWhileUndrafted>
	<showPsycastEffects>true</showPsycastEffects>
	<displayGizmoWhileUndrafted>true</displayGizmoWhileUndrafted>
	<jobDef>CastAbilityOnThing</jobDef>
</AbilityDef></Defs>
