<Defs>

	<!-- Psytrainer for Translocate Target -->
	<ThingDef ParentName="ResourceBase">
		<defName>ProjectOvermind_Psytrainer_TranslocateTarget</defName>
		<label>psytrainer (translocate target)</label>
		<description>A one-use psychic trainer device that teaches the user the Translocate Target psycast - the ability to instantly relocate any pawn to a chosen location.\n\nPsytrainers can be used by anyone with basic psycasting ability.</description>
		<thingClass>ThingWithComps</thingClass>
		<category>Item</category>
		<drawerType>MapMeshOnly</drawerType>
		<useHitPoints>true</useHitPoints>
		<pathCost>14</pathCost>
		<allowedArchonexusCount>5</allowedArchonexusCount>
		<resourceReadoutPriority>Middle</resourceReadoutPriority>
		<stackLimit>10</stackLimit>
		<statBases>
			<MaxHitPoints>80</MaxHitPoints>
			<MarketValue>1200</MarketValue>
			<Mass>0.2</Mass>
			<Flammability>0.2</Flammability>
			<DeteriorationRate>0.5</DeteriorationRate>
		</statBases>
		<thingCategories>
			<li>ItemsMisc</li>
		</thingCategories>
		<graphicData>
			<texPath>Things/Item/Special/Psytrainer</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<tradeTags>
			<li>ExoticMisc</li>
			<li>Psytrainer</li>
		</tradeTags>
		<techLevel>Archotech</techLevel>
		<comps>
			<li Class="CompProperties_Forbiddable" />
			<li Class="CompProperties_Usable">
				<useJob>UseItem</useJob>
				<useLabel>Use psytrainer to learn translocate target</useLabel>
				<useDuration>100</useDuration>
			</li>
			<li Class="RimWorld.CompProperties_Psytrainer">
				<ability>ProjectOvermind_TranslocateTarget</ability>
			</li>
			<li Class="CompProperties_UseEffectPlaySound">
				<soundOnUsed>PsytrainerUse</soundOnUsed>
			</li>
			<li Class="CompProperties_UseEffectDestroySelf" />
		</comps>
		<tickerType>Never</tickerType>
		<alwaysHaulable>true</alwaysHaulable>
		<burnableByRecipe>true</burnableByRecipe>
		<smeltable>false</smeltable>
		<randomizeRotationOnSpawn>true</randomizeRotationOnSpawn>
	</ThingDef>

